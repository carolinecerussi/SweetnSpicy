@{
  Layout = "_Layout";
}

@model Shop.Models.Treat

<h4>Edit this Treat: @Html.DisplayFor(model => model.TreatName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatId)

  @Html.LabelFor(model => model.TreatName)
  @Html.EditorFor(model => model.TreatName)

  @Html.Label("Add Flavor")
  @Html.DropDownList("FlavorId", "Flavor")

  <input id="btn" type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to Treats", "Index")</p>